    <GLUT_INSTALL_DIR>C:\glut</GLUT_INSTALL_DIR>
  </PropertyGroup>

  <!-- Debug|Win32 -->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|Win32'">
  </PropertyGroup>
